<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Регистрация сервлета -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserByIdServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.UserByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAuthServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.UserAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FunctionServet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.FunctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FunctionByIdServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.FunctionByIdServlet</servlet-class>
    </servlet>

    <!-- Маппинг URL на сервлет -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAuthServlet</servlet-name>
        <url-pattern>/api/users/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserByIdServlet</servlet-name>
        <url-pattern>/api/users/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FunctionServet</servlet-name>
        <url-pattern>/api/functions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FunctionByIdServlet</servlet-name>
        <url-pattern>/api/functions/*</url-pattern>
    </servlet-mapping>
</web-app>