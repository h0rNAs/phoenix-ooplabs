<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Регистрация сервлета -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUserServlet</servlet-name>
        <servlet-class>ru.ssau.tk.phoenix.ooplabs.servlets.SearchUserServlet</servlet-class>
    </servlet>

    <!-- Маппинг URL на сервлет -->
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/profile/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUserServlet</servlet-name>
        <url-pattern>/profile/search</url-pattern>
    </servlet-mapping>

</web-app>